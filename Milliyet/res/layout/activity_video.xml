<FrameLayout 
	xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mad="http://schemas.android.com/apk/res/com.amvg.milliyet.main"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <LinearLayout 
        android:id="@+id/menu" 
        android:layout_width="wrap_content" 
        android:layout_height="match_parent"
        android:orientation="vertical"  
        android:background="@color/listview_selector_slide_menu">
        <LinearLayout 
		     android:layout_width="255dp"
		     android:layout_height="44dp"
		     android:background="#282828"
		     android:gravity="center">
		     <ImageView 
			 	android:id="@+id/lo"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:src="@drawable/navigation_bar_logo"/>
		</LinearLayout>
        <ListView
            android:id="@+id/list_View_Menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@drawable/divider_deneme"
            android:dividerHeight="2dp">
        </ListView>
    </LinearLayout>
	<LinearLayout 
	    android:id="@+id/app"
	    android:orientation="vertical"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:background="#FFFFFF">
    	<LinearLayout 
    	    android:layout_width="match_parent" 
            android:id="@+id/linearLayout1"  
            android:gravity="center"
            android:layout_height="44dp"
            android:background="@drawable/navigation_bar"
            android:orientation="horizontal">
			<RelativeLayout
		    	android:layout_width="match_parent"
		     	android:layout_height="wrap_content"
		     	android:background="@drawable/navigation_bar" >
     			<ImageView 
     				android:id="@+id/menuImage" 
                   	android:layout_height="wrap_content"
                   	android:layout_width="wrap_content"
                   	android:layout_gravity="left"
                   	android:src="@drawable/navigation_bar_main_menu"/>
			    <ImageView
			        android:id="@+id/logoImage"
			        android:layout_width="wrap_content"
			        android:layout_height="match_parent"
			        android:layout_alignBottom="@+id/menuImage"
			        android:layout_centerHorizontal="true"
			        android:layout_gravity="center" />
     			<ImageView
                    android:id="@+id/refreshImage"
                    android:layout_gravity="right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/navigation_bar_refresh"
                    android:layout_alignParentRight="true" />
 			</RelativeLayout>
		</LinearLayout>
 		<RelativeLayout 
	    	android:layout_width="match_parent"
	     	android:layout_height="match_parent">
			<ScrollView
     			android:id="@+id/scrollview"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:orientation="vertical">
 				<LinearLayout 
     				android:id="@+id/background"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:orientation="vertical">
	    			<LinearLayout
	     				android:layout_width="match_parent" 
	                  	android:id="@+id/itemLayout"
	                  	android:layout_height="31dp"
	                  	android:background="@drawable/title_background"
	                  	android:orientation="vertical">
    					<RelativeLayout 
		        	    	android:layout_width="match_parent" 
		                	android:id="@+id/titleSonDakikaLayout"  
		                	android:gravity="center"
		                	android:layout_height="30dp"
		                	android:background="@drawable/title_background"
		                	android:orientation="horizontal"
		                	android:paddingTop="2dp">
		                	<TextView
						          android:id="@+id/GaleriTitle"
						          android:layout_width="wrap_content"
						          android:layout_height="wrap_content"
						          android:layout_gravity="center_vertical"
						          android:layout_marginLeft="10dp"
						          android:text="Galeri"
						          android:layout_weight="1"
						          android:visibility="gone"
						          android:textSize="16dp" 
						          android:textStyle="bold"
						          android:textColor="#666666"/>
     						<TextView
				          		android:id="@+id/date"
				          		android:layout_width="wrap_content"
				          		android:layout_height="wrap_content"
				          		android:layout_gravity="center_vertical"
				          		android:layout_marginLeft="5dp"
				          		android:layout_centerVertical="true"
				          		android:layout_weight="1"
				          		android:textSize="14dp" 
				          		android:textStyle="bold"
				          		android:textColor="#666666">
      						</TextView>
					      	<ImageView
					        	android:layout_alignParentRight="true"
					            android:layout_marginRight="5dp"
					            android:id="@+id/image"
					            android:layout_width="30dp"
					            android:layout_height="wrap_content"
					            android:layout_gravity="center"
					            android:scaleType="fitXY" />
					        <TextView
					          	android:id="@+id/weatherData"
					          	android:layout_width="wrap_content"
					          	android:layout_height="wrap_content"
					          	android:layout_centerVertical="true"
					          	android:layout_toLeftOf="@+id/image"
					          	android:layout_weight="1"
					          	android:textColor="#666666"
					          	android:textSize="14dp"
					          	android:textStyle="bold" />
						</RelativeLayout>
						<View 
							android:id="@+id/customdivider"
						    android:layout_width="fill_parent"
						    android:layout_height="1dp"
						    android:background="#E0E0E0"/>
 					</LinearLayout>
    				<LinearLayout
					    android:layout_width="match_parent"
					    android:layout_height="match_parent"
					    android:background="#000000"
					    android:orientation="vertical" >
	 					<de.madvertise.android.sdk.MadvertiseView
							android:id="@+id/madad"
							android:layout_width="fill_parent"
							android:layout_height="wrap_content"
							android:background="#000000"
							android:layout_gravity="center"
							mad:bannerType="mma"
							mad:placement_type="inline"/>
					   <View 
					    	android:id="@+id/BannerDivider"
					    	android:layout_width="fill_parent"
					    	android:visibility="gone"
					    	android:layout_height="2dp"
					    	android:background="#FF0000"/>
 					</LinearLayout>
					<LinearLayout 
					    android:id="@+id/PagerLayout"
					    android:orientation="vertical"
					    android:layout_width="fill_parent"
					    android:layout_height="160dp"
					    android:background="#000000">
	    				<android.support.v4.view.ViewPager
					        android:id="@+id/pager"
					        android:layout_width="fill_parent"
					        android:layout_height="wrap_content" 
					        android:layout_weight="1"/>
	    				<com.viewpagerindicator.CirclePageIndicator
					        android:id="@+id/indicator"
					        android:padding="5dip"
					        android:layout_height="wrap_content"
					        android:layout_width="fill_parent"/>
					</LinearLayout>
					<LinearLayout
     					android:layout_width="match_parent" 
	                    android:id="@+id/itemLayout"
	                    android:layout_height="31dp"
	                    android:background="@drawable/title_background"
	                    android:orientation="vertical">
	    				<View 
						    android:id="@+id/customdivider"
						    android:layout_width="fill_parent"
						    android:layout_height="1dp"
						    android:background="#E0E0E0"/>
    					<RelativeLayout 
		        	    	android:layout_width="match_parent" 
		                  	android:id="@+id/titleSonDakikaLayout"
		                  	android:layout_height="30dp"
		                  	android:background="@drawable/title_background"
		                  	android:orientation="vertical"
		                  	android:gravity="center"
		                  	android:paddingTop="2dp">
					     	<TextView
					        	android:id="@+id/date"
					         	android:layout_width="wrap_content"
					         	android:layout_height="wrap_content"
					         	android:layout_alignParentLeft="true"
					         	android:layout_centerVertical="true"
					         	android:layout_marginLeft="5dp"
					         	android:layout_weight="1"
					         	android:layout_centerInParent="true"
					         	android:text="Öne Çıkanlar"
					         	android:textColor="#666666"
					         	android:textSize="16dp"
					         	android:textStyle="bold" />
 						</RelativeLayout>
						<View 
							android:id="@+id/customdivider"
						    android:layout_width="fill_parent"
						    android:layout_height="1dp"
						    android:background="#E0E0E0"/>
 					</LinearLayout>
 					<com.amvg.milliyet.main.HorizontalScrollViewExt
				     	android:id="@+id/HorizontalScroll"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:paddingTop="5dp" 
				        android:background="#FFFFFF"
				        android:scrollbars="none">
	 					<LinearLayout 
					    	android:id="@+id/VideoFeaturedLayout"
					     	android:layout_width="wrap_content"
					     	android:layout_height="wrap_content"
					     	android:orientation="horizontal"
					     	android:background="#FFFFFF">
	 					</LinearLayout>
					</com.amvg.milliyet.main.HorizontalScrollViewExt>
					<TextView 
					    android:layout_width="match_parent"
					    android:layout_height="30dp"
					    android:gravity="center"
					    android:text="Kategoriler"
					    android:textSize="16dp"
					    android:textColor="#FFFFFF"
					    android:background="#333333"/>
					<View 
					    android:id="@+id/customdivider"
					    android:layout_width="fill_parent"
					    android:layout_height="1dp"
					    android:background="#dddddd"/>
					<LinearLayout 
					    android:id="@+id/VideoCategoriesLayout"
					    android:layout_width="wrap_content"
					    android:layout_height="wrap_content"
					    android:orientation="vertical">
 					</LinearLayout>
 					<TextView 
 						android:id="@+id/Copyrigth"
 						android:layout_width="match_parent"
 						android:layout_height="50dp"
 						android:gravity="center"
 						android:textColor="#666666"
 						android:textSize="12dp"
 						android:background="#FFFFFF"
 						android:textStyle="bold"
 						android:text=""/>
				</LinearLayout>
			</ScrollView>
		</RelativeLayout>
	</LinearLayout>
</FrameLayout>