<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/categoriesLayout0"
    android:layout_width="match_parent"
    android:layout_height="43dp"
    android:orientation="vertical"
    android:clickable="true"
    android:background="@color/listview_selector_white">
    <LinearLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:orientation="horizontal"
        android:paddingRight="11dp" 
        android:duplicateParentState="true">
        <RelativeLayout
            android:id="@+id/contentLayout"
            android:layout_width="249dp"
            android:layout_height="42dp"
            android:layout_alignParentLeft="true"
            android:layout_weight="0.17"
            android:paddingRight="3dp" 
            android:layout_gravity="center_vertical"
            android:duplicateParentState="true">
            <TextView
                android:id="@+id/categoriesText0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="No data"
                android:textColor="@color/selector_text_breaking_news"
                android:textSize="16dp"
                android:textStyle="bold" 
                android:duplicateParentState="true">
            </TextView>
            <TextView
                android:id="@+id/categoriesID0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="no data"
                android:visibility="gone" 
                android:duplicateParentState="true">
            </TextView>
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/arrowLayout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:gravity="center_vertical" 
            android:duplicateParentState="true">
            <ImageView
                android:id="@+id/arrow"
                android:layout_width="10dp"
                android:layout_height="14dp"
                android:layout_weight="0"
                android:src="@drawable/arrow_selector" 
                android:duplicateParentState="true"/>
        </LinearLayout>
    </LinearLayout>
	<View 
	    android:id="@+id/customdivider"
	    android:layout_width="fill_parent"
	    android:layout_height="1dp"
	    android:background="#E0E0E0"/>
</LinearLayout>