<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
	xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="58dp">
    <LinearLayout
    	android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:orientation="horizontal"
        android:paddingRight="11dp" >
        <RelativeLayout
            android:id="@+id/contentLayout"
            android:layout_width="249dp"
            android:layout_height="58dp"
            android:layout_alignParentLeft="true"
            android:layout_weight="0.17"
            android:paddingRight="3dp" >
            <TextView
                android:id="@+id/saatText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text=""
                android:textColor="#b71e23"
                android:textSize="16dp"
                android:textStyle="bold" >
            </TextView>
            <TextView
                android:id="@+id/haberText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/saatText"
                android:text="No data"
                android:textColor="@color/selector_text_breaking_news"
                android:textSize="16dp"
                android:textStyle="bold" >
            </TextView>
            <TextView
                android:id="@+id/type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="no data"
                android:visibility="gone" >
            </TextView>
            <TextView
                android:id="@+id/contentType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="no data"
                android:visibility="gone" >
            </TextView>
            <TextView
                android:id="@+id/ID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="no data"
                android:visibility="gone" >
            </TextView>
            <TextView
                android:id="@+id/categoryId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="no data"
                android:visibility="gone" >
            </TextView>
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/arrowLayout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:gravity="center_vertical" >
            <ImageView
                android:id="@+id/arrow"
                android:layout_width="10dp"
                android:layout_height="14dp"
                android:layout_weight="0"
                android:src="@drawable/arrow_selector" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>